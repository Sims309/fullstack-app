{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf ../dist/backend",
    "build": "tsc -p tsconfig.node.json",
    "rebuild": "npm run clean && npm run build",
    "start": "node ../dist/backend/index.js",
    "dev": "nodemon -r ts-node/register -r tsconfig-paths/register src/index.ts",
    "watch": "nodemon --exec ts-node src/index.ts",
    "test": "jest --detectOpenHandles --passWithNoTests",
    "test:backend": "npm run test",
    "test:watch": "jest --watch"
  },
  "type": "commonjs",
  "_moduleAliases": {
    "@controllers": "dist/backend/src/server/controllers",
    "@middleware": "dist/backend/src/server/middleware",
    "@schemas": "dist/backend/src/server/validation/schemas",
    "@routes": "dist/backend/src/server/routes",
    "@utils": "dist/backend/src/utils",
    "@services": "dist/backend/src/server/services",
    "@types": "dist/backend/src/types"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.1.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "fetch-cookie": "^3.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "mysql2": "^3.14.2",
    "node-fetch": "^2.7.0",
    "winston": "^3.17.0",
    "zod": "^4.0.8"
  },
  "devDependencies": {
    "@jest-mock/express": "^3.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.1.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.0",
    "supertest": "^7.1.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}