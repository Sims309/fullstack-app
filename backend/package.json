{
  "name": "backend",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "../dist/backend/server.js",
  "scripts": {
    "clean": "rimraf ../dist/backend",
    "build": "tsc --build",
    "rebuild": "npm run clean && npm run build",
    "start": "node ../dist/backend/server.js",
    "dev": "ts-node --require tsconfig-paths/register --project tsconfig.json src/server.ts",
    "watch": "nodemon --exec ts-node --require tsconfig-paths/register src/server.ts",
    "test": "jest --detectOpenHandles --passWithNoTests",
    "test:backend": "npm run test",
    "test:watch": "jest --watch",
    "test:frontend": "powershell -File src/server/scripts/test_frontend.ps1"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.1.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "fetch-cookie": "^3.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.14.2",
    "node-fetch": "^2.7.0",
    "winston": "^3.17.0",
    "zod": "^4.0.8"
  },
  "devDependencies": {
    "@jest-mock/express": "^3.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.1.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}