{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "outDir": "../dist/backend",
    "tsBuildInfoFile": "../dist/backend/tsconfig.backend.tsbuildinfo",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@routes/*": ["src/server/routes/*"],
      "@middleware/*": ["src/server/middleware/*"],
      "@utils/*": ["src/utils/*"],
      "@shared/*": ["../shared/*"],
      "@controllers/*": ["src/server/controllers/*"],  // ✅ s'assurer que le dossier existe
      "@types/*": ["src/types/*"],
      "@server": ["src/server.ts"],                    // ✅ ou "src/server/index.ts" selon ton projet réel
      "@prismaClient": ["src/server/prismaClient.ts"],
      "@services/*": ["src/server/services/*"]
    },
    "target": "ES2020",
    "module": "commonjs",
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts",
    "tests/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "../dist"
  ],
  "references": [
    { "path": "../shared" }
  ]
}
