{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "../dist/backend",
    "tsBuildInfoFile": "../dist/backend/tsconfig.backend.tsbuildinfo",

    // ✅ Supprimer typeRoots pour éviter l’erreur
    // "typeRoots": ["./src/server/types", "../../node_modules/@types"],

    // ✅ Déclarer uniquement ce que tu veux charger
    "types": ["node"],

    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "../dist"],
  "references": [
    { "path": "../shared" }
  ]
}
