{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "outDir": "../dist/backend",
    "tsBuildInfoFile": "../dist/backend/tsconfig.backend.tsbuildinfo",

    "types": ["node", "jest"],
    "moduleResolution": "node",
    "esModuleInterop": true,

    // ✅ baseUrl pointé vers ./src pour les imports internes à backend
    "baseUrl": "./src",

    // ✅ alias d'import avec résolution relative à ./src
    "paths": {
      "@routes/*": ["routes/*"],
      "@middleware/*": ["routes/middleware/*"],
      "@utils/*": ["utils/*"],
      
      // ✅ alias vers le dossier partagé (en dehors de backend)
      "@shared/*": ["../shared/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../dist"
  ],
  "references": [
    { "path": "../shared" }
  ]
}
