{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "outDir": "../dist/backend",
    "tsBuildInfoFile": "../dist/backend/tsconfig.backend.tsbuildinfo",

    "types": ["node", "jest"],
    "moduleResolution": "node",
    "esModuleInterop": true,

    // ✅ baseUrl : point de départ pour les paths ci-dessous
    "baseUrl": ".",

    // ✅ alias de chemins pour imports simplifiés
    "paths": {
      "@/*": ["src/*"],                               // ✅ ← AJOUT essentiel ici
      "@routes/*": ["src/routes/*"],
      "@middleware/*": ["src/routes/middleware/*"],
      "@utils/*": ["src/utils/*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../dist"
  ],
  "references": [
    { "path": "../shared" }
  ]
}
