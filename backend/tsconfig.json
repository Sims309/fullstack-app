{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "outDir": "../dist/backend",
    "tsBuildInfoFile": "../dist/backend/tsconfig.backend.tsbuildinfo",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@routes/*": ["src/server/routes/*"],
      "@middleware/*": ["src/server/middleware/*"],
      "@utils/*": ["src/utils/*"],
      "@shared/*": ["../shared/types/*"],       // ✅ Corrigé ici
      "@controllers/*": ["src/server/controllers/*"],
      "@types/*": ["src/types/*"],              // ✅ Conserve pour les .d.ts si besoin
      "@server": ["src/server.ts"]              // ✅ Pour import { app } from '@server'
    },
    "target": "ES2020",
    "module": "commonjs",
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts",
    "tests/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "../dist"
  ],
  "references": [
    { "path": "../shared" }
  ]
}
