{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src",                             // ✅ Correction ici
    "outDir": "../dist/backend",                    // ✅ Sortie claire
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",                                 // ✅ Pour utiliser les alias
    "paths": {
      "@shared/*": ["../shared/*"]                  // ✅ Accès aux types partagés
    },
    "types": ["node"],
    "typeRoots": ["../node_modules/@types"]
  },
  "include": [
    "src/**/*",
    "../shared/**/*"
  ]
}
