{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    },

    "jsx": "react-jsx",

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "types": []
  }
}
